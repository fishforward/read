<div id="content">
    <!-- Start Section Single Team People -->
    <section id="single-team-mobile" class="container">

    	<% if @posts && @posts.size > 0 %>
			<% @posts.each do |post| %>
			<div class="row" id=<%= post.id%>>
				<div <% if post.pic_url && !post.pic_url.blank? %> class="span10" <%else%> class="span12" <%end%>>
					<div class="team-name">
	                    <!--<h2>Susan Rakkhita</h2>-->
	                    <h2><a href= <%= "/posts/show_m/"+post.id.to_s %> TARGET="_blank" >
	                    	<%= post.title %></a>
	                    </h2>
	                    <!--<h3>Founder</h3>-->
	                    <h3><!--<a href=<%= "/authors/"+post.author_id.to_s %>>-->
	                    	<%= post.author_name %>
	                    <!--</a>--></h3>
	                </div>

	                <div class="team-social">
	                    <ul>
	                        <li>
	                        	<a href=<%= "/posts/show_m/"+post.id.to_s %>>
	                        		<i class="font-icon-eye"><% if post.pv %> <span><%=post.pv/2%></span> <% end %></i>
	                        	</a>
	                    	</li>
	                        <li>
	                        	<span class="post_unlove" <% if @post_ids==nil || !@post_ids.include?(post.id) %> style="display:none;" <% end %>>
	                        		<i class="font-icon-heart"> <span class="love_num"><%= post.yes %></span></i>
	                        		
	                        	</span>	                   
	                        	<span class="post_love" id=<%=post.id%> <% if @post_ids && @post_ids.include?(post.id) %> style="display:none;" <% end %>>
	                        		<a href="javascript:void(0)"><i class="font-icon-heart-line"> <span class="love_num"><%= post.yes %></span></i></a>

	                        	</span>
	                        	
	                        </li>
	                    </ul>
	                </div>
	            </div>

	            <% if post.pic_url && !post.pic_url.blank? %>
	            <div class="span2 post_imgage">
	                <div class="team-img">
	                    
							<img class="img-polaroid" alt="content" src=<%= post.pic_url+"!small"%>>
	                </div>

	            </div>
	            <% end %>

	        </div>

	        <div class="row">
	            <hr class="span12">
	        </div>

	        <% end %> 
			
			<div class="row">
				<div class="cus_pagination">
					<%= will_paginate(@posts, :previous_label => '上一页', :next_label => '下一页', :renderer => WillPaginate::ActionView::BootstrapLinkRenderer) %> 
				</div>
			</div>

		<% else %>
			<div class="row">
		    	<div class="span10 offset1">  
					&nbsp;&nbsp;&nbsp;暂无阅读条目
				</div>
			</div>
		<% end %>
        
    </section>
    <!-- End Section Single Team People -->
</div>