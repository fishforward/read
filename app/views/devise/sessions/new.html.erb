<!-- Start Intro Box -->
<section id="intro-box" class="single-post">
  <div class="container">
      <div class="row">
          <div class="span12">
              <h2 class="entry-title">
                后台管理登录  您迷路嘍～～～
              </h2>
                <span class="arrow"></span>
            </div>
        </div>
    </div>
</section>

<section id="contact">
    <div id="single-team" class="container">
		<div class="blog">
			<div class="span8 blog-content">   

				<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<% if notice %>
						<button type="button" class="close" data-dismiss="alert">×</button>
						<p class="alert"><%=notice%></p>
					<% end %>
					<% if alert %>
						<button type="button" class="close" data-dismiss="alert">×</button>
						<p class="alert alert-error"><%=alert%></p>
					<% end %>
					
					<div class="input">
						<div class="input-prepend">
							<span class="add-on">Email:</span>							
							<%= f.text_field :email, :autofocus => true, :size =>10 %>
						</div>
					</div>

					<div class="input">
						<div class="input-prepend">
							<span class="add-on">Password:</span>							
							<%= f.password_field :password , :size =>10 %>
						</div>
					</div>

				<!--
				  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				  <% end -%>
				-->

				  <div style="margin-left:30px;"><%= f.submit "提交" %></div>
				<% end %>

			</div>
		</div>
	</div>
</div>
