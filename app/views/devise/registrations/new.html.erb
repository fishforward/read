<!-- Start Intro Box -->
<section id="intro-box" class="single-post">
  <div class="container">
      <div class="row">
          <div class="span12">
              <h2 class="entry-title">
                注册
              </h2>
                
              <span class="arrow"></span>
            </div>
        </div>
    </div>
</section>
<!-- End Intro Box -->

<section id="content">
    <div id="single-team" class="container">
		<div class="blog">
			<div class="span5 offset3">   

				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
					<fieldset>

						<% if devise_error_messages! && devise_error_messages!.class!="".class %>
					  		<div class="alert alert-error">
								<button type="button" class="close" data-dismiss="alert">×</button>
					  			<%= devise_error_messages! %>
					  		</div>
					  	<% end %>

						<% if notice %>
							<div class="alert">
								<button type="button" class="close" data-dismiss="alert">×</button>
								<%=notice%>
						    </div> 
						<% end %>
						<% if alert %>
							<div class="alert">
								<button type="button" class="close" data-dismiss="alert">×</button>
								<%=alert%>
							</div> 
						<% end %>

						<div class="control-group">
							<label class="control-label" for="email">邮箱</label>
				  			<div class="controls">
				  				<%= f.email_field :email %>
				  			</div>
				  		</div>
				  		<div class="control-group">
				  			<label class="control-label" for="password">密码</label>
				  			<div class="controls">
				  				<%= f.password_field :password %>
				  			</div>
				  		</div>

				  		<div class="control-group">
				  			<label class="control-label" for="password again">确认密码</label>
				  			<div class="controls">
						  		<%= f.password_field :password_confirmation %>
						  	</div>
				  		</div>

					    <div class="control-group">
					    	<div class="controls">
					    		&nbsp;&nbsp;&nbsp;&nbsp;
					    		&nbsp;&nbsp;&nbsp;&nbsp;
								<%= f.submit "提交注册信息",:class=>"btn btn-primary" %>
															
							</div>
						</div>

						<div class="control-group">
					    	<div class="controls">
					    		<%= link_to "站内登录", new_session_path(resource_name),:class=>"" %>
					    		<!--<%= link_to image_tag("weibo-loginbtn_03.png"), '/users/auth/weibo' %>-->
					    		<!--<%= link_to image_tag("qq_Connect_logo_3.png"), '/users/auth/qq_connect' %>-->
					    		&nbsp;&nbsp;&nbsp;&nbsp;
					    		<%= link_to image_tag("qq_Connect_logo_3.png"), '/users/auth/tqq' %>
							</div>
						</div>
					</fieldset>
				<% end %>

			</div>
		</div>
	</div>
</section>
