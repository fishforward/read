<h1>Listing sources</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Author</th>
    <th>Post date</th>
    <th>Title</th>
    <th>Content</th>
    <th>Text content</th>
    <th>Post url</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%= source.id %></td>
    <td><%= source.author_id %></td>
    <td><%= source.post_date %></td>
    <td><%= source.title %></td>
    <td><%= source.content %></td>
    <td><%= source.text_content %></td>
    <td><%= source.post_url %></td>
    <td><%= source.status %></td>
    <td><%= link_to 'Show', source %></td>
    <td><%= link_to 'Edit', edit_source_path(source) %></td>
    <td><%= link_to 'Destroy', source, confirm: 'Are you sure?', :method =>:delete %></td>
  </tr>
<% end %>
</table>

