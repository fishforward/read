<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Post date</th>
    <th>Title</th>
    <!--<th>Content</th>-->
    <th>Pic url</th>
    <th>Post url</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.author_id %></td>
    <td><%= post.post_date %></td>
    <td><%= post.title %></td>
    <!--<td><%= post.content %></td>-->
    <td><%= post.pic_url %></td>
    <td><%= post.post_url %></td>
    <td><%= post.status %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

