<!-- Start Intro Box -->
<section id="intro-box" class="single-post">
  <div class="container">
      <div class="row">
          <div class="span12">
              <h2 class="entry-title">
                <%= @post.title %>
              </h2>
                
                <div class="entry-meta">
                    <% if @post.author_name && !@post.author_name.blank? %>
                      <span class="author"><%= @post.author_name %></span>
                      <span class="divider">/</span>
                    <% end %>
                    <!--<span class="published"><%= @post.post_date %></span>
                    <span class="divider">/</span>-->
                    <span class="read_num"><% if @post.pv %> 阅读(<%= @post.pv/2 %>)<% end %></span>
                </div>
                <span class="arrow"></span>
            </div>
        </div>
    </div>
</section>
<!-- End Intro Box -->

<div id="content">
    <!-- Start Blog Single Page -->
    <section id="blog" class="container single-post">
