            -->
              <div class="entry-content">
                  <p><%=raw @post.content %></p>
                 
              </div>
              
              <div id="link_tag" class="entry-meta entry-footer">
                <span class="entry-categories">
                  <a href=<%= @post.post_url %>> 阅读原文</a>
